@model Damplus.Entities.Concrete.SmmPacket
<style>
    .form-group input {
        margin: 5px;
    }
</style>
<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Endirimlər</h1>
        <p class="page-subtitle">Buradan yeni Endirim yarada, editləyə və silə bilərsiniz.</p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="active"><a asp-area="Admin" asp-action="Index" asp-controller="Business">Endirimlər</a></li>
</ol>
<div class="container-fluid">
    <div class="col-lg-12">
        <form asp-area="Admin" asp-controller="Option" asp-action="PriceSmm" method="post">
            <div class="row">
                <div class="col-lg-4">
                    <h3>Endirim 1 Paket</h3>
                    <input type="text" asp-for="PacketFirstName" value="@Model.PacketFirstName" />
                    <h4>Qiymet</h4>
                    <input type="text" asp-for="PacketFirstPrice" value="@Model.PacketFirstPrice" />
                    <div class="form-group">
                        <input type="text" asp-for="Text1" value="@Model.Text1" />
                        <input type="text" asp-for="Text2" value="@Model.Text2" />
                        <input type="text" asp-for="Text3" value="@Model.Text3" />
                        <input type="text" asp-for="Text4" value="@Model.Text4" />
                        <input type="text" asp-for="Text5" value="@Model.Text5" />
                       
                    </div>
                </div>
                <div class="col-lg-4">
                    <h3>Endirim 2 Paket</h3>
                    <input type="text" asp-for="PacketSecondName" value="@Model.PacketSecondName" />
                    <h4>Qiymet</h4>
                    <input type="text" asp-for="PacketSecondPrice" value="@Model.PacketSecondPrice" />
                    <div class="form-group">
                        <input type="text" asp-for="Text6" value="@Model.Text6" />
                        <input type="text" asp-for="Text7" value="@Model.Text7" />
                        <input type="text" asp-for="Text8" value="@Model.Text8" />
                        <input type="text" asp-for="Text9" value="@Model.Text9" />
                        <input type="text" asp-for="Text10" value="@Model.Text10" />
                        
                    </div>
                </div>
                <div class="col-lg-4">
                    <h3>Endirim 3 Paket</h3>
                    <input type="text" asp-for="PacketThirdName" value="@Model.PacketThirdName" />
                    <h4>Qiymet</h4>
                    <input type="text" asp-for="PacketThirdPrice" value="@Model.PacketThirdPrice" />
                    <div class="form-group">
                        <input type="text" asp-for="Text11" value="@Model.Text11" />
                        <input type="text" asp-for="Text12" value="@Model.Text12" />
                        <input type="text" asp-for="Text13" value="@Model.Text13" />
                        <input type="text" asp-for="Text14" value="@Model.Text14" />
                        <input type="text" asp-for="Text15" value="@Model.Text15" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Yadda Saxla</button>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> Legv Et</a>
                </div>
            </div>
        </form>
    </div>
</div>
