@using Damplus.Mvc.Extensions
@model ProjectDetailViewModel
<!-- ========================
       page title
    =========================== -->
<section class="page-title page-title-layout8 text-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <nav>
                    <ol class="breadcrumb justify-content-center mb-20">
                        <li class="breadcrumb-item"><a href="index-2.html">Ana Səhifə</a></li>
                        <li class="breadcrumb-item"><a href="projects-grid.html">Layihələr</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.ProjectDto.Project.Name</li>
                    </ol>
                </nav>
            </div><!-- /.col-xl-6 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.page-title -->
<!-- ======================
 portfolio single
========================= -->
<section class="portfolio-single pt-0 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="portfolio-item">
                    <div class="portfolio__img">
                        <img src="~/img/@Model.ProjectDto.Project.Photo" alt="@Model.ProjectDto.Project.Name | Damplus" class="img-fluid">
                    </div>
                    <div class="portfolio__icon">
                        <i class="icon-paint-roller"></i>
                    </div>
                    <div class="portfolio__content text-center">
                        <h2 class="portfolio__title">@Model.ProjectDto.Project.Name</h2>
                        <div class="portfolio__cat">
                            <a href="#">@Model.ProjectDto.Project.ProjectCategory.Name</a>
                        </div><!-- /.portfolio-cat -->
                        <p class="portfolio__desc">
                            @Model.ProjectDto.Project.Info
                        </p>
                    </div><!-- /.portfolio-content -->
                </div><!-- /.portfolio-item  -->
                <div class="fancybox-layout2 mb-60">
                    <div class="row">
                        <!-- fancybox item #1 -->
                        <div class="col-sm-12 col-md-12 col-lg-4">
                            <div class="fancybox-item">
                                <div class="fancybox__icon">
                                    <i class="icon-wrench5"></i>
                                </div><!-- /.fancybox-icon -->
                                <div class="fancybox__content">
                                    <h4 class="fancybox__title">Powerfull Product<br> Strategy</h4>
                                    <p class="fancybox__desc">
                                        Our facilities meet high security requirements and are certified to the
                                        highest local standards.
                                    </p>
                                </div><!-- /.fancybox-content -->
                            </div><!-- /.fancybox-item -->
                        </div><!-- /.col-lg-3 -->
                        <!-- fancybox item #2 -->
                        <div class="col-sm-12 col-md-12 col-lg-4">
                            <div class="fancybox-item">
                                <div class="fancybox__icon">
                                    <i class="fa fa-briefcase"></i>
                                </div><!-- /.fancybox-icon -->
                                <div class="fancybox__content">
                                    <h4 class="fancybox__title">Award Winning <br>Projects </h4>
                                    <p class="fancybox__desc">
                                        The world of international supply chains involves of unknown risks and
                                        challenging regulations.
                                    </p>
                                </div><!-- /.fancybox-content -->
                            </div><!-- /.fancybox-item -->
                        </div><!-- /.col-lg-3 -->
                        <!-- fancybox item #3 -->
                        <div class="col-sm-12 col-md-12 col-lg-4">
                            <div class="fancybox-item">
                                <div class="fancybox__icon">
                                    <i class="fa fa-question-circle-o"></i>
                                </div><!-- /.fancybox-icon -->
                                <div class="fancybox__content">
                                    <h4 class="fancybox__title">100% Satisfaction <br> Guarantee</h4>
                                    <p class="fancybox__desc">
                                        Building relationships and projects that last. Serving an impressive
                                        clients.
                                    </p>
                                </div><!-- /.fancybox-content -->
                            </div><!-- /.fancybox-item -->
                        </div><!-- /.col-lg-4 -->
                    </div><!-- /.row -->
                </div><!-- /.fancybox-layout2  -->
                <div class="portfolio-gallery">
                    <div class="row">
                        <!-- portfolio item #1 -->
                        @foreach (var item in Model.PhotoListDto.Photos)
                        {
            <div class="col-sm-6 col-md-6 col-lg-4">
                <div class="portfolio-item">
                    <div class="portfolio__img">
                        <a class="popup-gallery-item" href="~/img/@item.URL">
                            <img src="~/img/@item.URL" alt="Damplus layihələri">
                        </a>
                    </div><!-- /.portfolio-img -->
                </div><!-- /.portfolio-item -->
            </div>}
                        <!-- /.col-lg-4 -->
                    </div><!-- /.row -->
                </div><!-- /.portfolio gallery -->
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-9 offset-lg-2">
                <div class="text__block text__block-layout2 mb-70">
                    <h5 class="text__block-title">Layihə haqqında</h5>
                    <div class="text__block-content">
                        <p class="text__block-desc">
                            @Html.Raw(Model.ProjectDto.Project.Description)
                        </p>
                        <ul class="portfolio__meta-list list-unstyled mt-30 mb-40">
                            <li><strong>Müştəri:</strong><span>@Model.ProjectDto.Project.Client</span></li>
                            <li><strong>Ərazi:</strong><span>@Model.ProjectDto.Project.Location</span></li>
                            <li><strong>Başlama tarixi:</strong><span>@Model.ProjectDto.Project.StartDate</span></li>
                            <li><strong>Təhvil tarixi:</strong><span>@Model.ProjectDto.Project.EndDate</span></li>
                        </ul>
                        <a href="/elaqe" class="btn btn__primary btn__icon btn__lg">
                            <span>Əlaqə</span><i class="icon-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.portfolio single -->
<!-- ===========================
  portfolio Grid
============================= -->
<section class="portfolio-grid pt-50 pb-50 border-top">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-40">
                    <h2 class="heading__title fz-25">Oxşar layihələr</h2>
                </div><!-- /heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
            <!-- portfolio item #1 -->
            @foreach (var item in Model.ProjectListDto.Projects.Take(3))
            {
<div class="col-sm-12 col-md-4 col-lg-4">
    <div class="portfolio-item">
        <div class="portfolio__img">
            <img src="~/img/@item.Photo" alt="@item.Name | Damplus">
        </div><!-- /.portfolio-img -->
        <div class="portfolio__content">
            <h4 class="portfolio__title"><a href="#">@item.Name</a></h4>
            <div class="portfolio__cat">
                <a href="#">@item.ProjectCategory.Name</a>
            </div><!-- /.portfolio-cat -->
        </div><!-- /.portfolio-content -->
    </div><!-- /.portfolio-item -->
</div>      }
            <!-- /.col-lg-4 -->
        </div><!-- /.row-->
    </div><!-- /.container -->
</section><!-- /.portfolio Grid -->