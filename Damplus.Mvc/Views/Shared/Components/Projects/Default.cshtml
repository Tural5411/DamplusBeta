@model Damplus.Mvc.Models.ProjectViewModel
@using Damplus.Mvc.Extensions


<section class="portfolio-standard portfolio-standard-carousel pt-120 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-50">
                    <span class="heading__subtitle">İcra etdiyimiz proyektlər</span>
                    <h2 class="heading__title">Tamamlanmış son layihələrimiz</h2>
                </div><!-- /.heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="slick-carousel"
                     data-slick='{"slidesToShow": 3, "slidesToScroll": 1, "arrows": false, "dots": true, "responsive": [ {"breakpoint": 992, "settings": {"slidesToShow": 2}}, {"breakpoint": 767, "settings": {"slidesToShow": 2}}, {"breakpoint": 480, "settings": {"slidesToShow": 1}}]}'>
                    <!-- portfolio item #1 -->
                    @foreach (var item in Model.ProjectListDto.Projects)
                    {
                        <div class="portfolio-item">
                            <div class="portfolio__img">
                                <img src="~/img/@item.Photo" alt="@item.Name | Damplus">
                            </div><!-- /.portfolio-img -->
                        <div class="portfolio__content">
                                <h4 class="portfolio__title"><a href="/Portfolio/@Url.FriendlyUrlHelper(item.Name).ToLower()/@item.Id">@item.Name</a></h4>
                                <!-- /.portfolio-cat -->
                            <p class="portfolio__desc">
                                    We understand that data is greatest asset when it comes to analyzing and
                                    optimizing your supply chain performance.
                                </p>
                                <a href="/Portfolio/@Url.FriendlyUrlHelper(item.Name).ToLower()/@item.Id" class="btn btn__loadMore">
                                    <span>Ətraflı</span><i class="icon-arrow-right"></i>
                                </a>
                            </div><!-- /.portfolio-content -->
                    </div>

                        <!-- /.portfolio-item -->
                    }
                </div><!-- /.slick-carousel -->
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>