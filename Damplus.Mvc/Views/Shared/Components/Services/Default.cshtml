@model Damplus.Mvc.Models.BusinessViewModel
@using Damplus.Mvc.Extensions

<section class="features-layout1 bg-gray pb-0">
    <div class="fetures-bg">
        <div class="bg-img"><img data-src="/damplus/assets/images/backgrounds/map.png" class="lazyload" alt="background"></div>
    </div>
    <div class="container col-padding-0">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-50">
                    <span class="heading__subtitle">Xidmətlərimiz</span>
                    <h2 class="heading__title">Profesional komandamızla xidmətinizdəyik !</h2>
                </div><!-- /.heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row features-wrapper">
            <!-- Feature Item #1 -->
            @foreach (var item in Model.BusinessListDto.Businesses)
            {
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="feature-item">
                <div class="feature__img">
                    <img class="lazyload" data-src="~/img/@item.ThumbNail" alt="@item.Title | Damplus">
                </div><!-- /.portfolio-img -->
                <div class="feature__content">
                    <h4 class="feature__title">@item.Title</h4>
                    <p class="feature__desc">
                        @item.SeoDescription
                    </p>
                    <a href="/Xidmet/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id" class="btn btn__secondary">
                        <span>Ətraflı</span><i class="icon-arrow-right"></i>
                    </a>
                </div><!-- /.portfolio-content -->
            </div><!-- /.portfolio-item -->
        </div><!-- /.col-lg-4 -->            }

        </div><!-- /.row -->
    </div><!-- /.container -->
</section>
