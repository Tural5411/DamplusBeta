@model Damplus.Mvc.Models.ArticleViewModel
@using Damplus.Mvc.Extensions

<section class="blog-grid pb-0">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-50">
                    <span class="heading__subtitle">Bloqlar</span>
                    <h2 class="heading__title">Faydalı Məlumatlar</h2>
                </div><!-- /.heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
            @foreach (var item in Model.ArticleListDto.Articles)
            {
                <!-- Blog Item #1 -->
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="blog-item">
                        <div class="blog__img">
                            <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id">
                                <img src="~/img/@item.ThumbNail" alt="@item.Title">
                            </a>
                        </div><!-- /.blog-img -->
                        <div class="blog__content">
                            <div class="blog__meta">
                                <div class="blog__meta-cat">
                                    <a asp-action="Index" asp-controller="Article" asp-route-categoryId="@item.Id">@item.Category.Name</a>
                                </div><!-- /.blog-meta-cat -->
                            </div><!-- /.blog-meta -->
                            <h4 class="blog__title"><a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id">@item.Title</a></h4>
                            <span class="blog__meta-date">@item.CreatedDate.ToShortDateString()</span>
                            <p class="blog__desc">
                                @(item.SeoDescription.Length>175 ? item.SeoDescription.Substring(0, 175):item.SeoDescription)
                            </p>
                            <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id" class="btn btn__secondary btn__link">
                                <span>Ətraflı</span>
                                <i class="icon-arrow-right"></i>
                            </a>
                        </div><!-- /.blog-content -->
                    </div><!-- /.blog-item -->
                </div><!-- /.col-lg-4 -->
            }
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>
