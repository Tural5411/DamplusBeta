    </div>
    <div class="widget mb-40">
        <div class="widget-title text-center">
            <h4>Populyar Bloqlar</h4>
        </div>
        <div class="widget__post">
            <ul>
                @foreach (var item in Model.Articles)
                {
    <li>
        <div class="widget__post-thumb">
            <img src="~/img/@item.ThumbNail" width="80" height="60" alt="">
        </div>
        <div class="widget__post-content">
            <h6><a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id">@item.Title</a></h6>
            <span><i class="far fa-eye"></i>@item.ViewsCount</span>
        </div>
    </li>}

            </ul>
