    <div class="widget mb-40">
        <div class="widget-title text-center">
            <h4>Kateqoriyalar</h4>
        </div>
        <ul class="cat__list">
            @foreach (var item in Model.Categories)
            {
<li><a asp-action="Index" asp-controller="Article" asp-route-categoryId="@item.Id">@item.Name</a></li>            }
        </ul>
    </div>
    <div class="widget mb-40">
        <div class="widget-title text-center">
            <h4>Bizi İzlə</h4>
        </div>
        <div class="widget-social text-center">
