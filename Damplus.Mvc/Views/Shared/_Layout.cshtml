@using Microsoft.Extensions.Options
@using Damplus.Entities.Concrete
@inject IOptionsSnapshot<WebsiteInfo> choose
@{
    var item = choose.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="description" content="@item.SeoDescription">
    <meta name="keywords" content="@item.SeoTags">
    <link href="/damplus/assets/images/logo/DumPlusNewLogo.png" rel="icon">
    <title>@item.Title</title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Barlow:400,500,600,700%7cRoboto:400,500,700&amp;display=swap">
    <link rel="stylesheet" href="~/damplus/assets/css/libraries.css">
    <link rel="stylesheet" href="~/damplus/assets/css/style.css">
    <meta name="google-site-verification" content="s4F-eZeJLlNqDSmTguRPM0nufDxozw-_VZD5UQN2HVw" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DNKJED14HF"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-DNKJED14HF');
    </script>
</head>

<body>
    <div class="wrapper">
        <div class="preloader">
            <div class="loading"><span></span><span></span><span></span><span></span></div>
        </div><!-- /.preloader -->
        <!-- =========================
            Header
        =========================== -->
        @await Component.InvokeAsync("Header") <!-- /.Header -->
        @RenderBody()

        <!-- ========================
          Footer
        ========================== -->
        @await Component.InvokeAsync("Footer") <!-- /.Footer -->
        <button id="scrollTopBtn"><i class="fa fa-long-arrow-up"></i></button>

        <div class="search-popup">
            <i class="search__popup-close">&times;</i>
            <form class="search__popup-form">
                <input type="text" class="search__input" method="get" asp-controller="Article" asp-action="Search" placeholder="Axtarış">
                <button class="module__search-btn"><i class="fa fa-search"></i></button>
            </form>
        </div><!-- /. search-popup -->

    </div><!-- /.wrapper -->
    <script>
        window.whatsformId = '1mhzpP';
        window.whatsformMessage = 'WhatsApp';
    </script>
    <script async src="https://whatsform.com/launcher.js"></script>

    <script src="~/damplus/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/damplus/assets/js/plugins.js"></script>
    <script src="~/damplus/assets/js/main.js"></script>
    <script src="~/js/lazysizes.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>