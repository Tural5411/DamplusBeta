@using Damplus.Mvc.Extensions
@model Damplus.Entities.DTOs.ArticleListDto
<!-- ========================
      page title
   =========================== -->
<section class="page-title page-title-layout7 bg-overlay bg-overlay-2 bg-parallax text-center">
    <div class="bg-img"><img src="~/damplus/assets/images/backgrounds/damplus55.webp" alt="background"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <h1 class="pagetitle__heading mb-0">Bloqlar</h1>
            </div><!-- /.col-xl-6 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.page-title -->
<!-- ======================
  Blog Grid
========================= -->
<section class="blog-grid">
    <div class="container">
        <div class="row">
            <!-- Blog Item #1 -->
            @foreach (var item in Model.Articles)
            {
<div class="col-sm-12 col-md-6 col-lg-4">
    <div class="blog-item">
        <div class="blog__img">
            <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id">
                <img src="~/img/@item.ThumbNail" alt="@item.Title">
            </a>
        </div><!-- /.blog-img -->
        <div class="blog__content">
            <div class="blog__meta">
                <div class="blog__meta-cat">
                    <a href="#">@item.Category.Name</a>
                </div><!-- /.blog-meta-cat -->
            </div><!-- /.blog-meta -->
            <h4 class="blog__title"><a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id">@item.Title</a></h4>
            <span class="blog__meta-date">@item.CreatedDate.ToShortDateString()</span>
            <p class="blog__desc">
                @(item.SeoDescription.Length>175 ? item.SeoDescription.Substring(0, 175):item.SeoDescription)...
            </p>
            <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id" class="btn btn__secondary btn__link">
                <span>Ətraflı</span>
                <i class="icon-arrow-right"></i>
            </a>
        </div><!-- /.blog-content -->
    </div><!-- /.blog-item -->
</div>            }
            <!-- /.col-lg-4 -->
        </div><!-- /.row -->
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                <nav class="pagination-area">
                    <ul class="pagination justify-content-center">

                        @{ if (Model.ShowPrevious)
                            {
                                if (Model.CategoryId != null)
                                {
                <li class="page-item"><a asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-categoryId="@Model.CategoryId.Value" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize"><i class="fa fa-angle-left"></i></a></li> }
                                else
                                {
                <li class="page-item"><a asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize"><i class="fa fa-angle-left"></i></a></li> }
                            }
                            for (int i = 1; i < Model.TotalPages; i++)
                            {
                                if (Model.CategoryId != null)
                                {
                <li class="page-item @(i==Model.CurrentPage ? "current" : "")"><a asp-route-currentPage="@i" asp-route-categoryId="@Model.CategoryId.Value" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize">@i</a></li> }
                                else
                                {
                <li class="page-item @(i==Model.CurrentPage ? "current" : "")"><a asp-route-currentPage="@i" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize">@i</a></li> }
                            }
                            if (Model.ShowNext)
                            {
                                if (Model.CategoryId != null)
                                {
                <li class="page-item"><a asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-categoryId="@Model.CategoryId.Value" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize"><i class="fa fa-angle-right"></i></a></li> }
                                else
                                {
                <li class="page-item"><a asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-isAscending="@Model.IsAscending" asp-route-pageSize="@Model.PageSize"><i class="fa fa-angle-right"></i></a></li> }
                            } }
                    </ul>
                </nav><!-- .pagination-area -->
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.blog Grid -->